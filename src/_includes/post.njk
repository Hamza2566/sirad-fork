---
layout: base.njk
css: blog-post.css
---
<article class="blog-post">
  <div class="container">
    <header class="post-header">
      <h1 class="post-title">{{ title }}</h1>
      <div class="post-meta">
        <time datetime="{{ postDate }}">{{ date | postDate }}</time>
        {% if excerpt %}
          <p class="post-excerpt">{{ excerpt }}</p>
        {% endif %}
      </div>
      {% if image %}
        <img 
          src="{{ image }}" 
          alt="{{ title }}" 
          class="post-featured-image"
          loading="lazy"
        >
      {% endif %}
    </header>

    <div class="post-content">
      {{ content | safe }}
    </div>
  </div>
</article>